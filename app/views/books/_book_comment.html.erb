<% @book.book_comments.each do |book_comment| %>
<table>
<tr>
<td>
<%= link_to(book_comment.user) do %>
<%= image_tag book_comment.user.get_profile_image(80,80) %><br>
<%= book_comment.user.name %></td>
<% end %>
<td><%= book_comment.comment %></td>
<!--コメントの削除ボタン-->
<% if book_comment.user == current_user %>
<!--, remote: trueを追加（非同期通信化）-->
<td><%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, data: { confirm: '本当に消しますか？' }, remote: true, class: "btn btn-sm btn-danger"%></td>
<% end %>
</tr>
<% end %>
</div>
</table>